{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1 class="w-100 text-center mt-2 mb-5 font-weight-normal">Inscription</h1>


		{{ form_start(registration_form, {'attr': {'class' : 'needs-validation w-50 m-auto'}})
								}}
		{{ form_row(registration_form.lastName, {
				'attr': {'class' : 'form-control mb-3 m-auto w-100', 'autofocus': 'autofocus'}, 'label_attr': {'class': 'form-label w-100'}}) }}
		{{ form_row(registration_form.firstName, {
				'attr': {'class' : 'form-control mb-3 m-auto w-100'}, 'label_attr': {'class': 'form-label w-100'}}) }}
		{{ form_row(registration_form.socialNumber, {
				'attr': {'class' : 'form-control mb-3 m-auto w-100'}, 'label_attr': {'class': 'form-label w-100'}}) }}
		{{ form_row(registration_form.email, {
				'attr': {'class' : 'form-control mb-3 m-auto w-100'}, 'label_attr': {'class': 'form-label w-100'}}) }}
		{{ form_row(registration_form.password, {
				'attr': {'class' : 'form-control mb-3 m-auto w-100'}, 'label_attr': {'class': 'form-label w-100'}}) }}
		{{ form_row(registration_form.confirmPassword, {
				'attr': {'class' : 'form-control mb-3 m-auto w-100'}, 'label_attr': {'class': 'form-label w-100'}}) }}
		<button type="submit" class="btn btn-lg -primary m-auto my-2">S'inscrire</button>
		{{ form_end(registration_form) }}

	</div>
{% endblock %}
