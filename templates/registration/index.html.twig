{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>S'inscrire</h1>

		{{ form_start(registration_form) }}
		{{ form_row(registration_form.lastName) }}
		{{ form_row(registration_form.firstName) }}
		{{ form_row(registration_form.socialNumber) }}
		{{ form_row(registration_form.email) }}
		{{ form_row(registration_form.password) }}
		{{ form_row(registration_form.confirmPassword) }}


		<button type="submit">S'inscrire</button>
		{{ form_end(registration_form) }}
	</div>
{% endblock %}
